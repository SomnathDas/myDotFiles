export PATH=$HOME/.local/bin:$PATH

# Screens
hdmi=`xrandr | grep ' connected' | grep 'HDMI' | awk '{print $1}'`

if [ "$hdmi" = "HDMI-0" ]; then
  xrandr --output VGA-0 --primary --mode 1366x768 --pos 276x1080 --output HDMI-0 --mode 1920x1080 --pos 0x0 &
else
  xrandr --output VGA-0 --primary --mode 1366x768 --pos 0x0 --rotate normal --output HDMI-0 --off --output DP-1 --off &
fi

#Wallpaper
nitrogen --restore &

#Compositor
picom -f &

